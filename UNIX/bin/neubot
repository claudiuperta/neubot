import sys
import os

NEUBOT_HOME = "@DATADIR@/neubot"

if NEUBOT_HOME.startswith("@"):
    NEUBOT_HOME = "."

if os.environ.has_key("NEUBOT_HOME"):
    NEUBOT_HOME = os.environ["NEUBOT_HOME"]
sys.path.insert(0, NEUBOT_HOME)

from neubot.main import main
main(sys.argv)
